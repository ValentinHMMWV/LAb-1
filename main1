#include <iostream>
using namespace std;
int main()
{
	//Begin 6.Дано довжини ребер a, b, c прямокутного паралелепіпеда.
	//Знайти його об'єм,
	//площу поверхні 
	//V = a · b · c, S = 2 ·(a · b + b · c + a · c).
	//деклараця змінних
	double a, b, c, V, S;
	cout << "\n_____Begin 6_____" << endl;

	//ввод змінної a
	cout << "Enter a =";
	cin >> a;

	//ввод змінної b
	cout << "Enter b =";
	cin >> b;

	//ввод змінної с
	cout << "Enter C =";
	cin >> c;
	//розрахунок результату
	V = a * b * c;								//об'єм паралелепіпеда
	S = 2 * (a * b + b * c + a * c);			//площа поверхні паралелепіпеда

	//вивід результату
	cout << "Volume parallelepiped =" << V << endl;
	cout << "Area paralelepiped =" << S << endl;
	return 0;
}
